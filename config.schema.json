{
  "pluginAlias": "PhilipsAmbilightTV",
  "pluginType": "platform",
  "singular": true,
  "strictValidation": false,
  "customUi": true,
  "schema": {
    "type": "object",
    "required": [
      "devices"
    ],
    "additionalProperties": false,
    "properties": {
      "devices": {
        "title": "TV Devices",
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "object",
          "required": [
            "name",
            "mac",
            "ip",
            "pin"
          ],
          "additionalProperties": false,
          "properties": {
            "name": {
              "title": "TV Name",
              "type": "string",
              "default": "My Philips TV",
              "description": "The name of the TV as it will appear in HomeKit."
            },
            "mac": {
              "title": "MAC Address",
              "type": "string",
              "pattern": "^([A-Fa-f0-9]{2}:){5}[A-Fa-f0-9]{2}$",
              "placeholder": "AA:BB:CC:DD:EE:FF",
              "description": "The MAC address of the TV on the local network."
            },
            "ip": {
              "title": "IP Address",
              "type": "string",
              "format": "ipv4",
              "placeholder": "192.168.1.100",
              "description": "The IP address of the TV on the local network."
            },
            "username": {
              "title": "Username",
              "type": "string",
              "description": "The username for authentication with the TV."
            },
            "password": {
              "title": "Password",
              "type": "string",
              "description": "The password for authentication with the TV."
            }
          }
        }
      }
    }
  }
}
